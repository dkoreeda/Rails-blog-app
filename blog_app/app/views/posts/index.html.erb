<h1>All Posts</h1>

<%= link_to "Create a new post", new_post_path %>

<% @posts.each do |post| %>

  <h3><%= post.title %></h3>
  <p><%= post.description %></p>
  <%= link_to "Edit this post", edit_post_path(post) %>
  <%= link_to "Delete this post", post, method: :delete, data: {confirm: "Are you sure?"} %>
  <%= link_to "Read comments about this post", comments_path(post.id) %>
<% end %>
